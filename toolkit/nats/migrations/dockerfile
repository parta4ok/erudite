# Dockerfile для запуска NATS миграций
FROM golang:1.24-alpine AS builder

WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

COPY . .

RUN CGO_ENABLED=0 GOOS=linux go build -a -installsuffix cgo -o nats-migrator ./toolkit/nats/migrations/cmd/main.go

FROM alpine:latest

RUN apk --no-cache add ca-certificates tzdata

WORKDIR /root/

COPY --from=builder /app/nats-migrator .

ENV NATS_URL=nats://nats:4222
ENV MIGRATION_MODE=up
ENV LOG_LEVEL=info

CMD ["./nats-migrator"]
